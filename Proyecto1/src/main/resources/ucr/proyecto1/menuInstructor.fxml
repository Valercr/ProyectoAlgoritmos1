<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuInstructorController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="138.0" layoutY="164.0" text="Welcome Instructor!">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ImageView fitHeight="90.0" fitWidth="106.0" layoutX="370.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/instructor.jpg" />
               </image>
            </ImageView>
         </children></AnchorPane>
   </center>
   <top>
      <MenuBar style="-fx-background-color: #ADC4CE;" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Courses">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#maintenanceCoursesOnAction" text="Maintenance" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Lessons">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#maintenanceLessonOnAction" text="Maintenance" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Reports">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#reportCourseOnAction" text="Per course" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Profile">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#editProfileOnAction" text="Edit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" onAction="#exitOnAction" text="Exit" />
        </menus>
      </MenuBar>
   </top>
</BorderPane>
